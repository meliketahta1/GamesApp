<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen320dp"
    android:layout_marginStart="@dimen/dimen5dp"
    android:layout_marginTop="@dimen/dimen10dp"
    android:layout_marginEnd="@dimen/dimen5dp"
    app:cardBackgroundColor="@color/bokora_grey"
    app:cardCornerRadius="@dimen/dimen10dp"
    app:cardElevation="0dp"
    app:layout_constrainedWidth="true">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llGameItem"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="6">

        <ImageView
            android:id="@+id/ivGameItem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/bg_trendgames_vertical" />

        <TextView
            android:id="@+id/tvGameName"
            style="@style/GameNameTextViewAppearance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dimen5dp"
            android:layout_weight="5"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="16sp" />


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>

